%header.product-form-header
  = render 'shared/simple_header01'
%main.product-form-main
  %h2.purchase-confirmation-title-T
    購入内容の確認
  %section.purchese-confirm-sections.product-info
    = image_tag("#{@images.product_image}", size: '64', class: "product-img")
    %p.product-name
      = @product.name
    -# =モデル無しのform_withを仮置き
    = form_with url: root_path, class: "purchase-confirmation-form" do |f|
      .form-sub-price-k
        .product-price
          ¥
          = @product.price
          %span.fee-side
            送料込み
      .point-info
        .no-point-k
          ポイントはありません
      .pay-amount
        .payment-subtitle
          支払い金額
        .payment-price
          ¥
          = @product.price
      =link_to( "/products/#{@product.id}/buy",class: "btn-default btn-red bold.form-buy-bottan_k") do
        購入する
  %section.purchese-confirm-sections.buyer-address
    %h3
      配送先
    %address
      = @users.address_number
      %br
      = @users_prefecture
      = @users.address_city
      = @users.address_banch
      %br
      = @users.nick_name
    %p.buy-user-info-text
    =link_to "", class:"change-link-purchase-confirm" do
      %span
        変更する
      .fa.fa-chevron-right
  %section.purchese-confirm-sections.purchase-info
    %h3
      支払い方法
    %p.buy-user-info-text
      カード番号
      %br
      有効期限
    %figure
      =image_tag "/assets/jcb-logomark-img-01.gif", alt: "jcb",  width: "26", height: "20"
    %p
    =link_to "select-card", class: "change-link-purchase-confirm" do
      %span
        変更する
      .fa.fa-chevron-right
%footer.product-new-footer
  = render 'shared/simple_footer01'